<launch>
	<!-- global rosparam -->
	<param name="use_sim_time" value="true"/>

	<!-- param -->
	<param name="num_cameras" type="int" value="4"/>
	<param name="weights_path" type="str" value="$(find dnn_attitude_estimation)/weights/mle4cam.pth"/>
	<!-- MAIN -->
	<node pkg="dnn_attitude_estimation" name="combine_mle_prediction" type="combine_mle_prediction.py" output="screen">
		<remap from="/image_raw0" to="/realsense_f/color/image_raw"/>
		<remap from="/image_raw1" to="/realsense_l/color/image_raw"/>
		<remap from="/image_raw2" to="/realsense_b/color/image_raw"/>
		<remap from="/image_raw3" to="/realsense_r/color/image_raw"/>
	</node>
</launch>
